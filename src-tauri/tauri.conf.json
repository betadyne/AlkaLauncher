{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AlkaLauncher",
  "version": "1.0.1",
  "identifier": "com.alka.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Alka Launcher",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/betadyne/AlkaLauncher/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk0M0YxNTYxMTI0MzhFOUUKUldTZWprTVNZUlUvbE82YlYvdFd1dzJhd0NxSVNFK0pRR0RaVUlraFIrZzFyNHdNaGlwZVRJd1cK"
    }
  }
}